{
  "name": "dart-barrel-file-generator",
  "displayName": "Dart Barrel File Generator",
  "description": "Generates barrel files for dart projects and Flutter apps.",
  "version": "0.0.2",
  "publisher": "miquelddg",
  "author": {
    "name": "Miquel de Domingo i Giral",
    "email": "miquelddg@gmail.com",
    "url": "https://www.github.com/mikededo"
  },
  "engines": {
    "vscode": "^1.49.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mikededo/dartBarrelFileGenerator"
  },
  "bugs": {
    "email": "miquelddg@gmail.com",
    "url": "https://www.github.com/mikededo/dartBarrelFileGenerator/issues"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "icon": "assets/logo.png",
  "keywords": [
    "dart",
    "barrel file",
    "flutter"
  ],
  "activationEvents": [
    "onCommand:extension.generateCurrentAndNested",
    "onCommand:extension.generateCurrent"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.generateCurrentAndNested",
        "title": "GDBF: Current and Nested Folders"
      },
      {
        "command": "extension.generateCurrent",
        "title": "GDBF: Current Folder Only"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.generateCurrentAndNested",
          "group": "7_modification",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "extension.generateCurrent",
          "group": "7_modification",
          "when": "explorerResourceIsFolder"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "test-compile": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/lodash": "^4.14.161",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.27",
    "@types/vscode": "^1.49.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "ts-loader": "^8.0.4",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "lodash": "^4.17.20"
  }
}
